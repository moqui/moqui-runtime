<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-include="false" require-authentication="false" history="false">

<!--    <pre-actions><script>-->
<!--        if (!ec.user.userId) { ec.web.saveScreenLastInfo(null, null); sri.sendRedirectAndStopRender('/Login') }-->
<!--    </script></pre-actions>-->

    <transition name="authcUserAuthcFactor"><service-call name="mantle.party.PartyServices.verify#UserAuthcFactor"/>
        <default-response url="."/></transition>

    <actions>
        <set field="userId" from="ec.user.userId"/>
    </actions>

    <widgets>
        <container-row>
            <row-col lg="4"/>
            <row-col lg="4">
                <label text="Follow the Steps below to Complete Authentication" type="h5"/>
                <container type="ol">
                    <container type="li"><label text="Choose One of the Options Below"/></container>
                    <container type="ul">
                        <container type="li"><label text="Enter a code from Authenticator App on device"/></container>
                        <container type="li"><label text="Enter a code from your email"/></container>
                        <container type="li"><label text="Enter a backup code"/></container>
                    </container>
                    <container type="li"><label text="Authenticate by Entering the Code into the Box below"/></container>
                </container>
                <form-single name="AuthcUserAuthcFactor" transition="authcUserAuthcFactor">
                    <field name="userId" from="userId"><default-field><hidden/></default-field></field>
                    <field name="factorTypeEnumId"><default-field><hidden/></default-field></field>
                    <field name="code"><default-field title=" "><text-line/></default-field></field>
                    <field name="submit"><default-field><submit/></default-field></field>
                </form-single>

            </row-col>
            <row-col lg="4"/>
        </container-row>
    </widgets>
</screen>
