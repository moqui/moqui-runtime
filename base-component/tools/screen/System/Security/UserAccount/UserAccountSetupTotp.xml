<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-include="false" standalone="true">

    <parameter name="factorId"/>
    <parameter name="userId"/>
    <parameter name="qrLabel"/>
    <parameter name="qrIssuer"/>
    <parameter name="qrSecret"/>
    <parameter name="qrUri"/>
    <parameter name="dataUri"/>

    <actions>
        <service-call name="mantle.party.PartyServices.setup#UserAuthcFactorTotp"/>
    </actions>

    <widgets>
        <container-box>
            <box-header title="Qr Code Authentication Setup"/>
            <box-body>
                <label text="Follow the Steps below to complete setup"/>
                <container type="ol">
                    <container type="li">Open Authenticator App on device such as Google Authenticator, Authy, or Lastpass Authenticator</container>
                    <container type="li">Choose Either of the Options Below</container>
                    <container type="ul">
                        <container type="li">Scan this QR Code</container>
                        <text>&lt;img src="${dataUri}"/&gt;</text>
                        <container type="li">Enter the Data Below Manually</container>
                        <container type="ul">
                            <container type="li"><text>Label: ${qrLabel}</text></container>
                            <container type="li"><text>Issuer: ${qrIssuer}</text></container>
                            <container type="li"><text>Secret: ${qrSecret}</text></container>
                        </container>
                    </container>
                </container>



            </box-body>
        </container-box>
    </widgets>
</screen>