<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-include="false" standalone="true">

    <parameter name="userId" required="true"/>
    <parameter name="singleUseCode"/>
<!--    <parameter name="emailAddress" value=""/>-->


    <transition name="createUserAuthcFactorEmail"><service-call name="mantle.party.PartyServices.create#UserAuthcFactorEmail"/>
        <default-response type="none"/></transition>
    <transition name="verifyUserAuthcFactorSingleUse"><service-call name="mantle.party.PartyServices.verify#UserAuthcFactorSingleUse"/>
        <default-response url="."/></transition>

    <actions>
<!--        <service-call name="mantle.party.PartyServices.create#UserAuthcFactorEmail" in-map="[userId:userId]" out-map="context"/>-->
<!--        <set field="emailAddress" from="ec.user.emailAddress"/>-->
<!--        <script>ec.logger.info(emailAddress)</script>-->
    </actions>

    <widgets>
        <container-box>
            <box-header title="Follow the Steps below to complete"/>
            <box-body>
                <container type="ol">
                    <container type="li"><label text="Enter an email to verify"/></container>
                    <form-single name="CreateUserAuthcFactorEmail" transition="createUserAuthcFactorEmail">
                        <field name="userId"><default-field><hidden default-value="${userId}"/></default-field></field>
                        <field name="factorOption"><default-field title="Email" ><text-line size="30" /></default-field></field>
                        <field name="submitButton"><default-field title="Add Email"><submit/></default-field></field>
                    </form-single>
                    <container type="li"><label text="Open Email Program. Check for Email that has the code. Don't forget to check spam, archive, trash, etc"/></container>
                    <container type="li"><label text="Once the code is found, input the code into the box below"/></container>
                    <form-single name="VerifyUserAuthcFactorSingleUse" transition="verifyUserAuthcFactorSingleUse">
                        <field name="userId"><default-field><hidden default-value="${userId}"/></default-field></field>
                        <field name="singleUseCode"><default-field title="Single Use Code"><text-line input-type="password" size="30" maxlength="16"/></default-field></field>
                        <field name="submit"><default-field><submit/></default-field></field>
                    </form-single>
                </container>
            </box-body>
        </container-box>
    </widgets>
</screen>