<screen xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="http://moqui.org/xsd/xml-screen-2.1.xsd"
        default-menu-include="false" standalone="true">

    <parameter name="userId"/>
    <parameter name="singleUseCode"/>

    <transition name="verifyUserAuthcFactorSingleUse"><service-call name="mantle.party.PartyServices.verify#UserAuthcFactorSingleUse"/>
        <default-response url="../UserAccountDetail"/></transition>

    <widgets>
        <container-box>
            <box-header title="Email Authentication Setup"/>
            <box-body>
                <label text="Follow the Steps below to complete setup"/>
                <container type="ol">
                    <container type="li">Open Email Program. Check for Email that has the code. Don't forget to check spam, archive, trash, etc</container>
                    <container type="li">Once the code is found, input the code into the box below</container>
                    <form-single name="VerifyUserAuthcFactorSingleUse" transition="verifyUserAuthcFactorSingleUse">
                        <field name="userId"><default-field><hidden default-value="${userId}"/></default-field></field>
                        <field name="singleUseCode"><default-field title="Single Use Code"><text-line size="30" maxlength="16"/></default-field></field>
                        <field name="submit"><default-field><submit/></default-field></field>
                    </form-single>
                </container>
            </box-body>
        </container-box>
    </widgets>
</screen>